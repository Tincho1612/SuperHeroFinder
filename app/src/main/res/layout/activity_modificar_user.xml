<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Modificar Usuario"
        android:textSize="28sp"
        android:textColor="#2196F3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp"/>

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nuevo Correo Electrónico"
        android:inputType="textEmailAddress"
        android:layout_below="@id/textViewTitle"
        android:layout_marginTop="16dp"
        android:backgroundTint="#2196F3"
        />

    <EditText
        android:id="@+id/editTextConfirmEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar Correo Electrónico"
        android:inputType="textEmailAddress"
        android:layout_below="@id/editTextEmail"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
       />

    <Button
        android:id="@+id/buttonChangeEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar Correo"
        android:layout_below="@id/editTextConfirmEmail"
        android:layout_marginTop="24dp"
        android:background="#FF5722"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"/>

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nueva Contraseña"
        android:inputType="textPassword"
        android:layout_below="@id/buttonChangeEmail"
        android:layout_marginTop="24dp"
        android:backgroundTint="#2196F3"
        />

    <EditText
        android:id="@+id/editTextConfirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirmar Contraseña"
        android:inputType="textPassword"
        android:layout_below="@id/editTextPassword"
        android:layout_marginTop="8dp"
        android:backgroundTint="#2196F3"
        />

    <Button
        android:id="@+id/buttonChangePassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cambiar Contraseña"
        android:layout_below="@id/editTextConfirmPassword"
        android:layout_marginTop="24dp"
        android:background="#4CAF50"
        android:textColor="#FFFFFF"
        android:textAllCaps="false"
        android:padding="12dp"/>
</RelativeLayout>